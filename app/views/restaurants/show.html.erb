<h1 class="pt-10 w-auto flex items-center"><%= @restaurant.name %></h1>

<div class="flex items-center flex-col gap-6">
  <div class="restaurant-details">
    <p><strong>Address:</strong> <%= @restaurant.address %></p>
    <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>

    <p>
      <strong>Category:</strong>
      <span class="badge"><%= @restaurant.category %></span>
    </p>
  </div>

  <div class="reviews bg-gray-100 mt-3 sm:col-span-2 sm:mt-0">
    <h2>Reviews</h2>

    <% @restaurant.reviews.each do |review| %>
      <div class="review">
        <p><strong>Rating:</strong> <%= "â­" * review.rating %></p>
        <p><%= review.content %></p>
      </div>
    <% end %>
  </div>

  <div class="new-review">
    <h3>Add a Review</h3>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content, as: :text %>
      <%= f.input :rating, collection: (0..5) %>
      <%= f.button :submit, "Submit Review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-secondary mt-3" %>
